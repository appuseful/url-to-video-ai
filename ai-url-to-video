  <h1>üîó Zamie≈Ñ link w wideo AI</h1>

  <input type="text" id="url" placeholder="Wklej adres URL artyku≈Çu..." />
  <br>
  <button onclick="generateVideo()">üé¨ Generuj wideo</button>

  <div id="result"></div>

  <script>
    async function generateVideo() {
      const url = document.getElementById("url").value;
      const result = document.getElementById("result");

      if (!url) {
        alert("Wprowad≈∫ poprawny URL.");
        return;
      }

      result.innerHTML = "<p>‚è≥ Generowanie wideo, proszƒô czekaƒá...</p>";

      try {
        const response = await fetch("http://localhost:5000/api/generate-video", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ url: url })
        });

        const data = await response.json();

        if (data.videoUrl) {
          result.innerHTML = `
            <p>‚úÖ Wideo wygenerowane pomy≈õlnie:</p>
            <video controls>
              <source src="http://localhost:5000${data.videoUrl}" type="video/mp4">
              Twoja przeglƒÖdarka nie obs≈Çuguje tagu <code>video</code>.
            </video>
          `;
        } else {
          result.innerHTML = "<p>‚ùå B≈ÇƒÖd podczas generowania wideo.</p>";
        }
      } catch (err) {
        result.innerHTML = `<p>‚ùå WystƒÖpi≈Ç b≈ÇƒÖd: ${err.message}</p>`;
      }
    }
  </script>

